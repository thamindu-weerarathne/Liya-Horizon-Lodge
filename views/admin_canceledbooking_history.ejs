<%- include("header.ejs") %>
    <div class="my-5 px-4">
        <h2 class="text-center fw-bold h-font">Booking History</h2>
        <div class="h-line bg-dark"></div>
    </div>

    <div class="container">
        <div class="container my-4">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <a href="/admin/ongoingbook" class="btn btn-outline-primary shadow-none mx-2">
                        Ongoing Bookings
                    </a>
                </div>
                <div class="col-auto">
                    <a href="/admin/canceledbook" class="btn btn-outline-danger shadow-none mx-2">
                        Canceled Bookings
                    </a>
                </div>
                <div class="col-auto">
                    <a href="/admin/completedbook" class="btn btn-outline-success shadow-none mx-2">
                        Completed Bookings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <% data.forEach((book)=>    {%>
    <div class="d-flex justify-content-center align-items-center">
        <div class="row w-100">
            <div class="col-lg-8 col-md-6 px-4 mx-auto">
                <div class="card mb-4 border-0 shadow">
                    <div class="row g-0 p-3 align-items-center">
                        <div class="col-md-3 mb-lg-0 mb-md-0 mb-3 text-center">
                            <img src="<%= book.roomId.image %>" class="img-fluid rounded" alt="Room Image">
                        </div>
                        <div class="col-md-6 px-lg-4 px-md-3 px-0">
                            <h5 class="mb-2">Room Details</h5>
                            <p class="mb-1"><strong>Customer:</strong> <%= book.cusId.name %></p>
                            <p class="mb-1"><strong>Room Type:</strong> <%= book.roomId.roomType %></p>
                            <p class="mb-1"><strong>Bed Type:</strong> <%= book.roomId.bedType %></p>
                            <p class="mb-1"><strong>Status:</strong> <%= book.status %></p>
                            <p class="mb-1"><strong>Price:</strong> NaN</p>
                        </div>
                        <!-- <div class="col-md-3 text-md-end text-center mt-md-0 mt-3">
                            <a href="#" class="btn btn-sm btn-outline-primary shadow-none mx-1">
                                Edit Booking
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-danger shadow-none mx-1">
                                Cancel Booking
                            </a>
                        </div> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%})%>
    
        
        <%- include("footer.ejs") %>