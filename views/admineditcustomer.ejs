<%- include("header.ejs") %>

    <div class="container">
        <div class="card shadow mt-5 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h1 class="text-center text-primary mb-4" style="font-family: 'Merienda', cursive;">Edit User
                    Information</h1>
                <form action="/admin/users/edit" method="POST">
                    <!-- ID (Hidden Field) -->
                    <input type="hidden" name="id" value="<%=data._id%>">

                    <!-- Name -->
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%=data.name%>" required>
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%=data.email%>"
                            required>
                    </div>

                    <!-- Phone Number -->
                    <div class="mb-3">
                        <label for="pnumber" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="pnumber" name="pnumber" value="<%=data.pnumber%>" required>
                    </div>

                    <!-- Address -->
                    <div class="mb-3">
                        <label for="address" class="form-label">Address</label>
                        <textarea class="form-control" id="address" name="address" rows="3"
                            required><%=data.address%></textarea>
                    </div>

                    <!-- Date of Birth -->
                    <div class="mb-3">
                        <label for="dob" class="form-label">Date of Birth</label>
                        <input type="date" class="form-control" id="dob" name="dob" value="<%= data.dob ? data.dob.toISOString().split('T')[0] : '' %>" required>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" value="<%=data.password%>">
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kQtW33rZJAHjgefvhyyzcGF8c+OmIW8q3UJ3XZGtjNI3RsI7KkF7FKgCxP0GMl5t"
        crossorigin="anonymous"></script>

    <%- include("footer.ejs") %>