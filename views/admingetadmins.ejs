<%- include("header.ejs") %>

<div class="my-5 px-4">
    <h2 class="text-center fw-bold h-font">Modify Users</h2>
    <div class="h-line bg-dark"></div>
    <p class="text-center mt-3">
        You can edit or delete a Users from here!!
    </p>
</div>

<div class="container">

    

    <div class="col-lg-7 col-md-8 mx-auto">
        <div class="text-end mb-4">
            <a href="/admins/addadmin" class="btn btn-success">
                <i class="bi bi-person-plus me-2"></i>Add New Admin
            </a>
        </div>
        <% data.forEach((user)=>{ %>
        <div class="bg-white rounded shadow p-4 border-top border-4 border-dark mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div>
                    <div class="mb-1">
                        <strong>Name:</strong> <%= user.name %>
                    </div>
                    <div class="mb-1">
                        <strong>Email:</strong> <%= user.email %>
                    </div>
                    <div class="mb-1">
                        <strong>Phone Number:</strong> <%= user.pnumber %>
                    </div>
                    <div class="mb-1">
                        <strong>Address:</strong> <%= user.address %>
                    </div>
                    <div class="mb-1">
                        <strong>Date of Birth:</strong> <%= new Date(user.dob).toLocaleDateString('en-GB') %>
                    </div>
                </div>
                <div class="d-flex">
                    <a href="edit/<%= user._id %>" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square me-2"></i>Edit
                    </a>
                    <a href="admin/delete/<%= user._id %>" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Delete
                    </a>
                </div>
            </div>
        </div>
        <%})%>
    </div>
</div>

<%- include("footer.ejs") %>
