<%- include("header.ejs") %>

<div class="container mt-5">
    <h3 class="text-center mb-4">Received Emails</h3>
    <% data.forEach((email) => { %>
        <a href="/admin/guestemails/<%= email._id %>" class="text-decoration-none">
            <div class="list-group mb-3">
                <!-- Add conditional class for green background -->
                <div class="list-group-item <%= email.reply ? 'bg-success text-white' : '' %>">
                    <h6 class="mb-1">Name: <%= email.name %></h6>
                    <p class="mb-1"><strong>Email:</strong> <%= email.email %></p>
                    <p class="mb-1"><strong>Subject:</strong> <%= email.subject %></p>
                    <p class="mb-1"><strong>Message:</strong> <%= email.message %></p>
                    <% if (email.reply) { %>
                        <p class="mb-1"><strong>Reply:</strong> <%= email.reply %></p>
                    <% } %>
                </div>
            </div>
        </a>
    <% }) %>
</div>

<%- include("footer.ejs") %>

