<%- include("header.ejs") %>

<div class="container mt-5">
    <h3 class="text-center mb-4">Email Thread</h3>

    <div class="bg-white p-4 rounded shadow">
        <h5 class="mb-3">Name: <%= data.name %></h5>
        <p><strong>Email:</strong> <%= data.email %></p>
        <p><strong>Subject:</strong> <%= data.subject %></p>
        <p><strong>Message:</strong> <%= data.message %></p>
    </div>

    <div class="mt-5">
        <h5 class="mb-4">Reply:</h5>
        <form action="/admin/sendemail" method="POST">
            <input type="hidden" name="id" value="<%= data._id %>">

            <div class="mb-3">
                <label for="replyEmail" class="form-label">Reply Email</label>
                <input type="email" class="form-control" id="replyEmail" name="email" value="<%= data.email %>" readonly required>
            </div>

            <div class="mb-3">
                <label for="replySubject" class="form-label">Subject</label>
                <input type="text" class="form-control" id="replySubject" name="subject" value="Reply to: <%= data.subject %>" readonly required>
            </div>

            <div class="mb-3">
                <textarea class="form-control" id="replyMessage" name="message" rows="4" placeholder="Type your message here" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Send Reply</button>
        </form>
    </div>
</div>

<%- include("footer.ejs") %>
